
<body>
    <div class="w-full bg-slate-100">
        <%- include('../layout/navbar') %>

        <div class="w-full h-full p-14">
            <h1 class="text-3xl mb-20 font-semibold">Dashboard</h1>
            <div class="grid grid-cols-2 gap-5">
                <div>
                    <h1><i class="fa-solid fa-plus me-3"></i>Last Week's Orders Report</h1>
                    <input type="text" class="my-2 text-[12px] py-1 px-2 outline-none text-slate-400" value="17/02/2024 - 24/02/2024" readonly>
                    <div id="chart" class="bg-white h-fit p-2 rounded-sm shadow-lg"></div>
                </div>
                <div>
                    <h1><i class="fa-solid fa-plus me-3"></i>Monthly Modem Rental Report</h1>
                    <input type="text" class="my-2 text-[12px] py-1 px-2 outline-none text-slate-400" value="Year: 2024" readonly>
                    <div id="chart2" class="bg-white h-fit p-2 rounded-sm shadow-lg"></div>
                </div>
            </div>

            <section id="rental" class="mt-20 pb-20 bg-white p-5">
                <h1 class="text-2xl">Rental Monitoring</h1>
                <div class="mt-5 min-h-[400px] overflow-auto">
                    <div>
                        <input type="text" class="my-4 text-[12px] w-56 border-2 py-1 px-2 outline-none text-slate-800 shadow" placeholder="search...">
                    </div>
                    
                    <div class="grid grid-cols-10 uppercase text-sm text-slate-500 mt-2 gap-2">
                        <div>
                            <p>No</p>
                        </div>
                        <div>
                            <p>Name</p>
                        </div>
                        <div>
                            <p>Destination</p>
                        </div>
                        <div>
                            <p>Passport</p>
                        </div>
                        <div>
                            <p>Boarding Passport</p>
                        </div>
                        <div>
                            <p>Modem</p>
                        </div>
                        <div>
                            <p>Plan</p>
                        </div>
                        <div>
                            <p>Rental Time</p>
                        </div>
                        <div class="pe-2">
                            <p>Rental Status</p>
                        </div>
                        <div>
                            <p>Action</p>
                        </div>
                    </div>
                    <% let no = 1; %>
                    <% for(const item of data) {%>
                    <div class="grid grid-cols-10 text-sm mt-5 gap-2">
                        <div class="flex items-center">
                            <p><%= no %></p>
                        </div>
                        <div class="flex items-center">
                            <p><%= item.name %></p>
                        </div>
                        <div class="flex items-center">
                            <p><%= item.Destination %></p>
                        </div>
                        <div class="flex items-center">
                            <button class="p-2 bg-sky-400 rounded-sm text-white text-[12px] lihat-passport" data-passport="assets/image/boardingpass<%= item.passport %>">Lihat Gambar</button>
                        </div>
                        <div class="flex items-center">
                            <button class="p-2 bg-sky-400 rounded-sm text-white text-[12px] lihat-boardingpass" data-boardingpass="assets/image/boardingpass<%= item.boarding_passport %>">Lihat Gambar</button>
                        </div>
                        <div class="flex items-center">
                            <p><%= item.jenis_modem %></p>
                        </div>
                        <div class="flex items-center">
                            <p><%= item.plan %></p>
                        </div>
                        <div>
                            <p class="countdown"></p>
                        </div>
                        <div class="flex items-center">
                            <p class="text-yellow-500"><%= item.status %></p>
                        </div>
                        <div>
                            <a class="me-4 cursor-pointer editStatus" data-id="<%= item.id %>"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a class="cursor-pointer"><i class="fa-solid fa-trash"></i></a>
                        </div>
                    </div>
    
                    <% no++ } %>
                </div>

            </section>
        </div>
    </div>

    <dialog class="p-5 text-sm rounded-lg">
        <div class="w-full">
            <div class="text-end text-xl cursor-pointer" id="formCloseBtn"><i class="fa-solid fa-xmark"></i></div>
            <h1 class="text-xl">John Doe</h1>
        </div>
        <form action="">
            <div class="flex flex-col mt-5">
                <label for="">Rental Status</label>
                <select name="rentalStatus" class="text-[12px] w-56 border-2 py-1 px-2 outline-none text-slate-800 shadow mt-2">
                    <option>Finished</option>
                    <option>In Progress</option>
                    <option>Abort</option>
                </select>
            </div>
            <div class="flex flex-col mt-5">
                <label for="">Returned</label>
                <select name="returned" class="text-[12px] w-56 border-2 py-1 px-2 outline-none text-slate-800 shadow mt-2">
                    <option>True</option>
                    <option>False</option>
                </select>
            </div>
            <button class="w-full p-2 bg-blue-500 text-white mt-5 rounded-sm hover:bg-blue-700 duration-500">Submit</button>
        </form>
    </dialog>

    <dialog class="min-h-[350px] p-5" id="lihatImage">
        <div class="text-end text-3xl cursor-pointer" id="closeBtn"><i class="fa-solid fa-xmark"></i></div>
        <div class="mt-5">
            <img src=""  alt="" id="modalImage" class="max-w-[400px]">
        </div>
    </dialog>